{
  "kind": "collectionType",
  "collectionName": "legal_documents",
  "info": {
    "singularName": "legal-document",
    "pluralName": "legal-documents", 
    "displayName": "Legal Document"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "document": {
      "type": "media",
      "allowedTypes": ["files"],
      "multiple": false,
      "required": true
    },
    "documentType": {
      "type": "enumeration",
      "enum": ["contract", "terms", "privacy", "prospectus", "regulation", "other"],
      "default": "other"
    },
    "jurisdiction": {
      "type": "enumeration",
      "enum": ["france", "europe", "usa", "poland", "international"],
      "default": "france"
    },
    "validFrom": {
      "type": "date",
      "required": false
    },
    "validTo": {
      "type": "date", 
      "required": false
    },
    "language": {
      "type": "enumeration",
      "enum": ["fr", "en", "de", "pl", "es"],
      "default": "fr"
    },
    "version": {
      "type": "string",
      "required": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "tags": {
      "type": "json"
    },
    "uploadedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
